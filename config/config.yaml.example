# RDR2-Spot config example
# מלא את הערכים לפי הצרכים. אין לשים מפתחות בגרסאות.
mode: DRY_RUN  # DRY_RUN or LIVE
timeframe: "15m"
dip_threshold_pct: -3.0         # כניסה אם נר <= -3.0
sma_length: 150
tp_percent: 0.025               # TP = avg_price * (1 + tp_percent)
dca_trigger_from_avg_pct: -3.5 # טריגר DCA במונחי אחוזים מה-avg
dca_scales: [1.0, 1.5, 2.0]
max_positions: 5
min_24h_volume_usdt: 5000000
blacklist:
  stablecoins: [USDC, FDUSD, TUSD, DAI, USDP]
  leveraged_tokens: [UP, DOWN, BULL, BEAR]
cooldown_minutes: 30
daily_loss_limit_pct: 5
exposure_total_max_pct: 40
exposure_symbol_max_pct: 15
scan_interval_seconds: 30
max_workers: 5
precision_guard: true
telegram:
  enabled: true
  chat_id: ""  # לשים ברגע שיש
  token_env_var: TELEGRAM_TOKEN
logging:
  level: INFO
  file: trading_bot.log
